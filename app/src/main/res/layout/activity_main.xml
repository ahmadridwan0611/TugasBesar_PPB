<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.koala.perhitunganbbi.Login">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="495dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pbbi"
            android:layout_width="275dp"
            android:layout_height="62dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:text="Perhitungan Berat Badan Ideal"
            android:textColor="#0716e6"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pbbi"
            android:paddingLeft="40dp"
            android:paddingTop="40dp"
            android:paddingBottom="10dp"
            android:text="Email"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt"
            android:paddingTop="70dp"
            android:paddingLeft="40dp"
            android:text="Password"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8"
            android:hint="Isi Email Anda"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:layout_below="@+id/pbbi"
            android:paddingTop="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="28dp">
        </EditText>

        <EditText
            android:id="@+id/edtxt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8"
            android:hint="Isi Password Anda"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:layout_below="@+id/edtxt"
            android:paddingTop="70dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="28dp">
        </EditText>

        <Button
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:visibility="visible"
            android:layout_marginTop="40dp"
            android:paddingTop="10dp"
            android:layout_below="@+id/edtxt2"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>